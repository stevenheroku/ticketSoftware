@model Bdl_Grupo2_ProyectoFinal_A.Tickets


<head>
    @{
        ViewBag.Title = "Editar Ticket";
        Layout = null;
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Css/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="overflow: hidden;">
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">
            <img style="height: 50px; width: 80px;" src="~/Media/Tecnicos/Logo_DevSolutions.png" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Tecnicos/ListaTecnicos">Ver Técnicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Usuarios/ListaUsuarios">Ver Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Ticket/ListTickets">Tickets</a>
                </li>
            </ul>
            <form action="/UsrTecnicos/SingOut" method="post">
                <button type="submit" class="btn btn-link" style="position: absolute; top:20px; left: 110em;">Cerrar Sesión</button>
            </form>
        </div>
    </nav>
    <div class="container animate__animated animate__fadeIn w3_" style="margin-top: 105px; padding: 0px 200px 0px 200px;">

        <div class="card login-form">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Tkt_Id)
                    <h2 class="display-5" style="margin-top: 10px; margin-bottom: 10px;">Editar Ticket</h2>
                    <div class="row">
                        <div class="col">
                            <label class="form-label select-label">Código Ticket</label>
                            <input type="text" name="Tkt_Codigo" id="Tkt_Codigo" value="@Model.Tkt_Codigo" class="form-control" disabled />
                        </div>
                        <div class="col">
                            <label class="form-label select-label">Documento de Indentificación Técnico</label>
                            @Html.DropDownList("Tec_Id", null, htmlAttributes: new { @class = "form-control", @style = "height: 35px;" })
                        </div>
                    </div>
                    <hr />
                    <div class="row" style="margin-top: 10px;">
                        <div class="col">
                            <label class="form-label select-label">Prioridad Ticket</label>
                            @Html.DropDownList("TktPrd_Id", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col">
                            <label class="form-label select-label">Estado del Ticket</label>
                            @Html.DropDownList("EstdTick_Id", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col">
                            <label class="form-label select-label">Código Usuario</label>
                            @Html.DropDownList("Usr_Id", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="row" style="margin-top: 10px;">
                        <div class="col-sm-7    ">
                            <label class="form-label select-label">Problema Técnico</label>
                            @Html.DropDownList("PrbTc_Id", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-sm">
                            <label class="form-label select-label">Código Equipo</label>
                            @Html.DropDownList("Eqs_Id", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="row" style="margin-top: 10px;">
                        <div class="col">
                            <label class="form-label select-label">Descripción</label>
                            <textarea class="form-control" id="descripcion" name="Tkt_Descripcion" rows="2">@Model.Tkt_Descripcion</textarea>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px;">
                        <div class="col">
                            <input type="submit" value="Actualizar" class="btn btn-primary" />
                            <a class="btn btn-link" href="~/Ticket/ListTickets" style="position: relative;">
                                Regresar
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>


